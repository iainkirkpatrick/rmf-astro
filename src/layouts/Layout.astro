---
import '@fontsource-variable/inter';
import '../styles/globals.css';

import type { User } from 'db/schema';

import NavUserButton from '@/components/NavUserButton.tsx';

interface Props {
	title: string;
	user?: User
}

const { title, user } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col items-center w-full">
		{!!user && (
			<nav class="my-6 flex justify-between items-center w-full max-w-6xl">
				<div>
					<h4 class="font-semibold text-xl">rate my flat</h4>
				</div>
				<NavUserButton client:idle user={user} />
			</nav>
		)}
		<slot />
	</body>
</html>

<style>
	html, body {
		width: 100%;
		height: 100%;
	}
</style>

<!-- add HTMX to all pages using main layout -->
<script>
	import htmx from 'htmx.org';
	// @ts-ignore
	window.htmx = htmx;
</script>