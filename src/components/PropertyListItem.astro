---
import { Image } from 'astro:assets';

interface Props {
	id?: number
	name?: string;
}

const { id, name } = Astro.props;
---

<a href=`/properties/${id}`>
	<div class="p-4 flex flex-col items-center w-72 h-72">
		<Image
			src="https://picsum.photos/256/192"
			alt="Random image for a property."
			width="256"
			height="192"
		/>
		<p class="mt-2">{name}</p>
	</div>
</a>